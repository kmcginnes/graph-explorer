{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    /* Path aliasing */
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
